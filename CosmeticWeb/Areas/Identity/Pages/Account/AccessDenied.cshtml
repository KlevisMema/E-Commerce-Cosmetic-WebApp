@page
@using CosmeticWeb.Helpers;
@using WebApplication1.Areas.Identity.Pages.Account;
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
    string modeClass = ModeHelper.GetModeClass(Request);
}

<style>
    .accessDenied {
        width: 100%;
        height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

        .accessDenied h1 {
            font-size: 52px;
            color: rgb(220,53,69);
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .accessDenied p {
            color: rgb(220,53,69);
            font-size: 20px;
        }

        .accessDenied a {
            border: 2px solid rgb(220,53,69);
            color: rgb(220,53,69);
        }

</style>

<div class="accessDenied @modeClass">
    <h1> <- @ViewData["Title"] -> </h1>
    <hr />
    <p>You do not have access to this resource.</p>
    <hr />
    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
    {
        <a asp-action="Index" asp-controller="Admin" class="btn">Home</a>
    }
    else
    {
        <a asp-action="Index" asp-controller="Home" class="btn">Home</a>
    }
</div>