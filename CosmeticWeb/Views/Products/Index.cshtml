@model IEnumerable<CosmeticWeb.Models.Product>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPannel.cshtml";
}

<style>
    .tdTable {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        gap: 10px;
    }
</style>

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Previous Price</th>
                <th>Description</th>
                <th>Rating</th>
                <th>Created Date</th>
                <th>Modified Date</th>
                <th>Image</th>
                <th>
                    <a asp-action="Create" asp-controller="Products" class="btn btn-table">Create</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.PreviousPrice</td>
                    <td>@item.Description</td>
                    <td>@item.Rating</td>
                    <td>@item.CreatedAt</td>
                    <td>@item.ModifiedAt</td>
                    <td><img src="./CreatedProductsImages/@item.Image" width="60px"/></td>
                    <td class="tdTable">
                        <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id" class="btn">Edit</a>
                        <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id"  class="btn">Delete</a>
                    </td>
                </tr>
            }
        <tbody>
    </table>
</div>