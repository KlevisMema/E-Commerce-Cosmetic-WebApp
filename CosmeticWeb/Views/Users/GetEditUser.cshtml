@using CosmeticWeb.ViewModels;
@model UsersViewModel
@{
    ViewData["Title"] = "GetEditUser";
    Layout = "~/Views/Shared/_AdminPannel.cshtml";
}


<div class="row">
    <div class="col-md-6">
        <form asp-action="PostEditUser" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" placeholder="Id ..." readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="UserName ..." />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email ..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmailConfirmed" class="control-label"></label>
                <input type="checkbox" asp-for="EmailConfirmed" class="form-control" placeholder="EmailConfirmed ..." />
                <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" asp-items="@ViewBag.Roles" class="form-control" placeholder="Roles ..." readonly />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="NewRole" class="control-label"></label>
                <select asp-for="NewRole" asp-items="@ViewBag.Roles" class="form-control" placeholder="Roles ..."></select>
                <span asp-validation-for="NewRole" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input asp-for="Page" hidden readonly />
                <input type="submit" value="Save" class="btn btn-primary" />
                <br />
                <a asp-action="Users" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>