@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminPannel.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>Create a new role</h2>
        <br />
        <br />
        <form asp-action="CreateRole" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Role name</label>
                <input name="roleName" class="form-control" placeholder="role ..." required />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <br />
                <a asp-action="GetRoles" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}