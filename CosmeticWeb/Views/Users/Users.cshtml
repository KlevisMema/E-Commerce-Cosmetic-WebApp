@using CosmeticWeb.ViewModels;
@using Microsoft.AspNetCore.Identity;
@model IEnumerable<UsersViewModel>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminPannel.cshtml";
}

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <td>Id</td>
                <th>User Name</th>
                <th>Email</th>
                <th>Email Confirmed</th>
                <th>Roles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.EmailConfirmed</td>
                    <td>
                       @item.Role
                    </td>
                    <td>
                        <a asp-action="GetEditUser"  asp-route-id="@item.Id" class="btn">Edit</a>
                        <a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn">Delete</a>
                    </td>
                </tr>
            }
        <tbody>
    </table>
</div>