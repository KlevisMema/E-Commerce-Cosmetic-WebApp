@using Microsoft.AspNetCore.Identity;
@model IdentityRole
@{
    ViewData["Title"] = "GetEdit";
    Layout = "~/Views/Shared/_AdminPannel.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="PostEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <br />
                <input asp-for="Name" name="roleName" class="form-control" placeholder="Name ..." required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <input asp-for="Id" name="id" hidden readonly />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <br />
                <a asp-action="GetRoles" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetRoles">Back to List</a>
</div>