@using Microsoft.AspNetCore.Identity;
@model IdentityRole
@{
    ViewData["Title"] = "GetDelete";
    Layout = "~/Views/Shared/_AdminPannel.cshtml";
}

<h3>Are you sure you want to delete this?</h3>

<div class="row">
    <div class="col-md-6">
        <h2>Are you sure you want to delete?</h2>
        <br />
        <br />
        <form asp-action="PostDelete" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Product name ..." readonly />
            </div>
            <input asp-for="Id" name="Id" hidden readonly />
            <br />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
                <br />
                <a asp-action="GetRoles" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>