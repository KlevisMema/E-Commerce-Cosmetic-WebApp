@model CosmeticWeb.Models.CosmeticTeamMember

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminPannel.cshtml";
}

<style>
    .image-container {
        display: flex;
        justify-content: space-between;
    }

    #arr {
        display: none;
    }
</style>

<div class="row">
    <div class="col-md-6">
        <h2>Edit @Model.Name</h2>
        <br />
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name ..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" placeholder="Role ..." />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Linkedin" class="control-label"></label>
                <input asp-for="Linkedin" class="form-control" placeholder="Linkedin link ..." />
                <span asp-validation-for="Linkedin" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Facebook" class="control-label"></label>
                <input asp-for="Facebook" class="form-control" placeholder="Facebook link ..." />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Instagram" class="control-label"></label>
                <input asp-for="Instagram" class="form-control" placeholder="Instagram link ..." />
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Twitter" class="control-label"></label>
                <input asp-for="Twitter" class="form-control" placeholder="Twitter link ..." />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" accept="image*/" onchange="loadImage(event)" id="imgfile" placeholder="Image ..." />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <br />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}