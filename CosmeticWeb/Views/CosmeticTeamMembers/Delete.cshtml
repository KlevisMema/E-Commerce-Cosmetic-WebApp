@model CosmeticWeb.Models.CosmeticTeamMember

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminPannel.cshtml";
}

<style>
    h2{
        margin-top: 200px;
    }
</style>
<div class="row">
    <div class="col-md-6">
        <h2>Are you sure you want to delete this team member?</h2>
        <br />
        <br />
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" readonly />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Linkedin" class="control-label"></label>
                <input asp-for="Linkedin" class="form-control" readonly />
                <span asp-validation-for="Linkedin" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Facebook" class="control-label"></label>
                <input asp-for="Facebook" class="form-control" readonly />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Instagram" class="control-label"></label>
                <input asp-for="Instagram" class="form-control" readonly />
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Twitter" class="control-label"></label>
                <input asp-for="Twitter" class="form-control" readonly />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" readonly />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
                <br />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>